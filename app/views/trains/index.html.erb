<h1>トレーニング記録一覧</h1>

<% @trains.group_by { |train| train.created_at.strftime("%Y年%m月%d日") }.each do |date, trains| %>
  <h2><%= date %>のトレーニング</h2>
  <ul>
    <% trains.each do |train| %>
      <li><%= train.name %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to "作成画面へ戻る", new_user_train_path(current_user) %>


