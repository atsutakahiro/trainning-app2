<div class="container">
  <h1 class="text-center mb-4">トレーニングの部位選択</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @train, url: user_trains_path(@user), local: true) do |form| %>
        <div class="form-group">
          <%= form.label :part, "トレーニングの部位" %>
          <%= form.select :part, options_for_select(@parts, "胸"), class: "form-control mt-2" %>
        </div>
        <div class="form-group">
          <%= form.label :date, "日付を選択" %>
          <%= form.date_field :date, value: Date.today.strftime("%Y-%m-%d"), required: true, class: "form-control mt-2" %>
        </div>
        <%= form.submit "選択", class: "btn btn-primary btn-block mt-3" %>
      <% end %>
    </div>
  </div>
</div>
